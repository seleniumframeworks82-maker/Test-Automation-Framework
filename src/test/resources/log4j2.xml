<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="Console" target="STSTEM_OUT">
			<PatternLayout
				pattern="%d{YYY-MM-dd HH:mm:ss} [%t] %level %logger::%M::%L %msg %n "/>
		</Console>
		
		<File name="FileLogger" fileName="logs/automation.log" append=" false">
			<PatternLayout
				pattern="%d{YYY-MM-dd HH:mm:ss} [%t] %level %logger %msg %n "/>
		</File>
	</Appenders>
	
	<Loggers>
		<Root level="info">
			<AppenderRef ref="Console"></AppenderRef>
			<AppenderRef ref="FileLogger"></AppenderRef>
		</Root>
	</Loggers>
</Configuration>